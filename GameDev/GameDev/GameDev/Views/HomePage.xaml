<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameDev.Views.HomePage" Title="Scribblenauts">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Orientation="Vertical">
            <Label Text="Scribblenauts" FontSize="Large" FontAttributes="Bold" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
            <Label Text="Let the battle begin!" FontSize="Small" FontAttributes="Bold" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
            <Button Text="AutoBattle" Clicked="OnAutoBattleClicked"/>
            <Button Text="Battle" Clicked="OnBattleClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>