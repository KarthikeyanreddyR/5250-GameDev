<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameDev.Views.Characters.CharacterDetailPage">
    <ScrollView Padding="0, 20, 0, 0">
        <StackLayout Padding="5, 0, 5, 0">
            <StackLayout Orientation="Horizontal">
                <Label Text="Character Details Page" FontSize="Medium" FontAttributes="Bold"></Label>
                <Button Text="Edit" HorizontalOptions="EndAndExpand" Clicked="Edit_Clicked"></Button>
                <Button Text="Delete" HorizontalOptions="End" Clicked="Delete_Clicked"></Button>
                <Button Text="Cancel" HorizontalOptions="End" Clicked="Cancel_Clicked"></Button>
            </StackLayout>
            <StackLayout Padding="0, 10, 0, 0">
                <Image Source="{Binding Character.ImageURI}" 
                       WidthRequest="300" HeightRequest="300" 
                       HorizontalOptions="CenterAndExpand"></Image>
                <StackLayout Padding="0, 10, 0, 0" Spacing="15">
                    <Label Text="{Binding Character.Name, StringFormat='Name : {0}'}" FontSize="Medium" FontAttributes="Bold"></Label>
                    <Label Text="{Binding Character.Description, StringFormat='Description : {0}'}"></Label>
                    <Label Text="{Binding Character.Age, StringFormat='Age : {0}'}"></Label>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>